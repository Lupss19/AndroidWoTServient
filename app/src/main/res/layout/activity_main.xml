<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    >

    <!-- Spaziatore verticale -->
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />


    <Button
        android:id="@+id/sensorDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vai a Dati" />

    <Button
        android:id="@+id/sensorListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensori sul Dispositivo" />

    <Button
        android:id="@+id/repeaterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connettiti a un Ripetitore"
        android:enabled="false" />

    <Button
        android:id="@+id/picAudioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invia Foto/Audio" />

    <Button
        android:id="@+id/shareSensorsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selezione Sensori da Condividere" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistiche" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Impostazioni" />

</LinearLayout>